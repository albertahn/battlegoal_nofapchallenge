<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:id="@+id/upload_image_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/post_send_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/image_view_comment"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apply"
        android:layout_below="@+id/edit_text_comment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="path"
        android:id="@+id/comment_photo_uri"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="write something"
        android:id="@+id/edit_text_comment"
        android:layout_below="@+id/upload_image_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white_transparent"
        android:layout_alignRight="@+id/post_send_btn"
        android:layout_alignEnd="@+id/post_send_btn"
        android:gravity="left|top" />


</RelativeLayout>