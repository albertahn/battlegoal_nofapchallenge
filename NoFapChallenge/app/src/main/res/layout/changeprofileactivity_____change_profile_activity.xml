<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/reg_scrollview">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="change profile picture"
        android:id="@+id/create_account_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


        <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imgView"
        android:layout_alignParentBottom="false"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:background="@drawable/my_message_bbl"


        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:src="@drawable/camman"
            android:layout_marginTop="150dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/photo_uri"

        android:layout_below="@+id/imgView" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/arrow_pic"
        android:src="@android:drawable/ic_menu_send"
        android:layout_alignParentRight="false"
        android:layout_alignRight="@+id/create_account_btn" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Edit Username:"
            android:id="@+id/name_lab"
            android:layout_below="@+id/create_account_btn"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none|textPersonName"
            android:ems="10"
            android:id="@+id/name_edit"
            android:layout_toRightOf="@+id/name_lab"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/name_lab"
            android:layout_below="@+id/arrow_pic"
            android:layout_alignRight="@+id/arrow_pic"
            android:layout_alignEnd="@+id/arrow_pic" />

    </RelativeLayout>
</ScrollView>

</RelativeLayout>

