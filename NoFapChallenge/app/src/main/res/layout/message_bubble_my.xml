<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
   >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"

        android:fontFamily="sans-serif-thin"
        android:id="@+id/user_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="text body"
        android:textColor="#ffffff"
        android:bottomRightRadius="57dp"
        android:id="@+id/text_body"
        android:layout_below="@+id/user_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sendbubble"

        android:paddingLeft="20dp"

        android:layout_marginLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:gravity="end"
        android:layout_marginRight="10dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="time_stamp"
        android:id="@+id/time_stamp"
        android:textColor="#ffffff"
        android:layout_marginTop="-20dp"
        android:background="#485566"

        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:layout_below="@+id/text_body"
        android:layout_alignLeft="@+id/text_body"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/timestamp_icon"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/time_stamp"
        android:layout_alignLeft="@+id/time_stamp"
        android:background="@color/transparent"
        android:layout_alignStart="@+id/time_stamp"
        android:src="@drawable/timestamp_icon"

        android:layout_marginBottom="10dp" />
</RelativeLayout>

