<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/battle_activity_rel_view"
    android:background="@drawable/battle_back">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/top_battle_rel_lay">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/my_image"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day"
            android:background="@color/white_transparent"
            android:id="@+id/my_score"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/my_name_text"
            android:layout_alignRight="@+id/my_image"
            android:layout_alignEnd="@+id/my_image"
            android:textColor="#ffffff"
            android:layout_alignLeft="@+id/my_image"
            android:gravity="center|center_vertical|center_horizontal" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="my_name"
            android:id="@+id/my_name_text"
            android:layout_below="@+id/my_image"
            android:layout_alignLeft="@+id/my_image"
            android:layout_alignStart="@+id/my_image"
            android:textColor="#ffffff"
            android:gravity="center|center_horizontal|fill_vertical" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/my_image"
            android:layout_toEndOf="@+id/my_image"
            android:id="@+id/friend_rel_layout_battle">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/friend_image"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="friend_name"
            android:id="@+id/friend_name_text"
            android:layout_below="@+id/friend_image"
            android:layout_alignRight="@+id/friend_image"
            android:textColor="#ffffff"
            android:gravity="center|center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Day"
            android:id="@+id/friend_score"
            android:layout_below="@+id/friend_name_text"
            android:layout_alignRight="@+id/friend_name_text"
            android:layout_alignEnd="@+id/friend_name_text"
            android:layout_alignLeft="@+id/friend_name_text"
            android:layout_alignStart="@+id/friend_name_text"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:background="@color/black_transparent"
            android:gravity="center|center_vertical|center_horizontal" />

        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:background="@color/white_transparent"
        android:layout_height="fill_parent"
        android:id="@+id/message_frag_list"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top_battle_rel_lay"
        android:layout_above="@+id/send_message_btn" />

    <!--<EditText
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:id="@+id/input_edit_text"
        android:layout_toStartOf="@+id/send_message_btn"
        android:layout_toLeftOf="@+id/send_message_btn"
        android:layout_alignParentBottom="true"
        android:background="#e5effaff"
        android:textColor="#111111"
        android:hint="write something"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message_frag_list"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:paddingRight="1dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:id="@+id/send_message_btn"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->
</RelativeLayout>



