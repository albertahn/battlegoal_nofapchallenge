<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_layout_loginpage"
    android:gravity="center_vertical|fill_vertical">


    <ScrollView
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:layout_alignParentBottom="false"
        android:background="@drawable/login_background">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/login_background"
            android:id="@+id/rel_layout_loginpage"

            >

            <Button
                android:id="@+id/login_facebook"


                android:text="Login with Facebook"



                android:background="#3b5998"
                android:textColor="#ffffff"


            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginTop="370dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"

                 />

            <EditText
                android:id="@+id/user_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:paddingLeft="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_underline"
                android:layout_marginTop="90dp"
                android:ems="10"
                android:hint="email"
                android:drawableBottom="@android:color/white"
                android:inputType="textEmailAddress"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/text_body_sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="58dp"
                android:text="NF Challenge"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/user_password_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/user_email"
                android:paddingLeft="30dp"
                android:background="@drawable/login_underline"
                android:layout_below="@+id/user_email"
                android:layout_marginTop="14dp"
                android:ems="10"
                 android:hint="password"
                android:inputType="textPassword"
                android:textColor="#ffffff">

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/send_apply_btn"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:text="Login"
                android:background="@drawable/roundedcorner_trans"
                android:layout_alignParentTop="true"
                android:layout_marginTop="200dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:textColor="#aacccc99"

                android:gravity="center|center_horizontal"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/register_new_btn"

                android:text="Create Account"
                android:background="@drawable/roundedcorner_trans"

android:gravity="center|center_horizontal"
                android:textColor="#ffffff"


             android:layout_width="260dp"
             android:layout_height="50dp"
            android:layout_alignTop="@+id/send_apply_btn"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"


                android:layout_marginTop="100dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:id="@+id/imageView"
                android:background="@color/transparent"
                android:layout_alignTop="@+id/login_facebook"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"


                android:src="@drawable/f_icon"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:layout_above="@+id/user_password_input"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/login_email" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:src="@drawable/login_password"
                android:layout_alignBottom="@+id/user_password_input" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

