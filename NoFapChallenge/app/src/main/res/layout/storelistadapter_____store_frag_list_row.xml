<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#da010101">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 운동했어??"
        android:id="@+id/product_description"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/product_picture"
        android:layout_toRightOf="@+id/product_picture"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/product_name" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/product_picture"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/comment_button"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/product_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/arrow_purchase" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/product_name"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/product_picture"
        android:layout_toEndOf="@+id/product_picture"
        android:textSize="18dp"
        android:textColor="#ffffff" />
    <!--here new one-->

</RelativeLayout>

