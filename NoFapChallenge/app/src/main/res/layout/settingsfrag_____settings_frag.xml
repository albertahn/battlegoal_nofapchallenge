<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="App Setting"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:padding="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Info"
            android:id="@+id/button3"
            android:layout_weight="0.42" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppSetting"
            android:id="@+id/button4"
            android:layout_weight="0.58" />
    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="
        Current Version : 4.7.7
        ---------------------------------------
        4.7.7. Version Info
        "
        android:id="@+id/textView5"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Notice Setting"
            android:textSize="30dp"
            android:padding="10dp" />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice/Notification"
            android:id="@+id/notify_button"
            android:textSize="30dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice/Sound"
            android:id="@+id/checkBox2"
            android:textSize="30dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full notification"
            android:id="@+id/checkBox3"
            android:textSize="30dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part notification"
            android:id="@+id/checkBox4"
            android:textSize="30dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News/Email"
            android:id="@+id/checkBox5"
            android:textSize="30dp" />
    </LinearLayout>
</LinearLayout>