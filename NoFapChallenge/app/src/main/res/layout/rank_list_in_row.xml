<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_underline"
    android:id="@+id/rank_list_row_rel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level"

        android:id="@+id/text_body_sample"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@color/transparent"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:gravity="center|center_vertical|center_horizontal" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/username"
        android:background="@color/transparent"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_body_sample"
        android:layout_toEndOf="@+id/text_body_sample"
        android:layout_alignBottom="@+id/text_body_sample"
        android:gravity="bottom|fill_vertical"
        android:layout_marginLeft="20dp" />
    <!--here new one-->

</RelativeLayout>

