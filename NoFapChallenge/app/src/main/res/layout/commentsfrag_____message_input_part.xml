<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e2e8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/langSelectZone"
        android:layout_below="@+id/live_chat_btn"
        android:layout_centerHorizontal="true"
        android:background="#ffffff">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_purchase_left"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:tint="#010101" />
    <HorizontalScrollView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:id="@+id/EnglishButton" />
        <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Español"
            android:id="@+id/EspanolButton" />
        <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국어"
            android:id="@+id/KoreanButton" />
            <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Português"
                android:id="@+id/PortuguesButton" />
        <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deutsch"
            android:id="@+id/DeutscheButton" />
            <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Français"
                android:id="@+id/FrancaiusButton" />
            <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日本の"
                android:id="@+id/JapaneseButton" />
            <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Italiano"
                android:id="@+id/ItalianoButton" />
            <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="Farsi"
                android:id="@+id/FarsiButton" />
            <com.changeandsuccess.nofapchallenge.comment_stuff.BitmapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arabic"
                android:id="@+id/ArabicButton" />
        </LinearLayout>
    </HorizontalScrollView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_purchase"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:tint="#010101" />
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/message_frag_list"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/send_message_btn"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/langSelectZone" />


    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_image_send"
        />-->

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_edit_text"
        android:minHeight="50dp"
        android:layout_alignParentBottom="true"
        android:background="#e5effaff"
        android:textColor="#111111"
        android:hint="write something"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:layout_marginLeft="50dp"
        android:paddingRight="1dp"
        android:layout_toLeftOf="@+id/send_message_btn" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:id="@+id/send_message_btn"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_progress_bar"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/send_message_btn"
        android:layout_alignEnd="@+id/send_message_btn"
        android:indeterminate="false" />

   <!-- <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/what?"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/abc_ic_clear_search_api_holo_light"
        android:background="#ffffff"
        android:visibility="gone"/>-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/add_image_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(new) Live Chat Room"
        android:id="@+id/live_chat_btn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/input_progress_bar"
        android:layout_alignEnd="@+id/input_progress_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

