<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffffff">



    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/youtubeButton"

        android:background="@drawable/youtube"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click here to see more videos"
        android:id="@+id/youtube_button"
        android:textColor="#0000ff"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/youtubeButton"
        android:layout_alignBottom="@+id/youtubeButton"
        android:layout_toRightOf="@+id/youtubeButton" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blog_videos_WebView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentBottom="true"
        android:layout_below="@+id/youtubeButton" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar_video"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout >

