<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="1"
    android:paddingLeft="10dp"
    android:id="@+id/featured_row_in_list_layout"
    android:background="@color/transparent"
    >

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="name"
        android:id="@+id/battle_username"

        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:fontFamily="sans-serif-thin"
        android:textSize="12sp"
        android:layout_below="@+id/profile_picture"
        android:textColor="#eeeeee"

        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profile_picture"
        android:src="@drawable/ic_launcher"
        android:layout_weight="0"
        android:baselineAlignBottom="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Accept Battle"
        android:id="@+id/accept_battle_btn"
        android:layout_alignBottom="@+id/profile_picture"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battle"
        android:id="@+id/request_battle_btn"
        android:layout_below="@+id/accept_battle_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/accept_battle_btn"
        android:layout_alignStart="@+id/accept_battle_btn"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="See Score"
        android:id="@+id/see_score_btn"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/accept_battle_btn"
        android:layout_toStartOf="@+id/accept_battle_btn"
        android:layout_alignBottom="@+id/request_battle_btn"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/score_text"
        android:layout_toLeftOf="@+id/see_score_btn"
        android:layout_toStartOf="@+id/see_score_btn"
        android:layout_alignTop="@+id/accept_battle_btn"
        android:layout_toRightOf="@+id/battle_username"
        android:layout_toEndOf="@+id/battle_username"
        android:layout_alignBottom="@+id/request_battle_btn"
        android:text="0"
        android:gravity="center_vertical|center_horizontal" />
</RelativeLayout>



