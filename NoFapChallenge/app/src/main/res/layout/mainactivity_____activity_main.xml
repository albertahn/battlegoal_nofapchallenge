                            android:id="@+id/NewsContents1"
                            android:layout_below="@+id/NewsTitle"
                            android:textSize="15dp"
                            android:textColor="#1e0b00" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:id="@+id/NewsContents2"
                            android:layout_below="@+id/NewsContents1"
                            android:textSize="15dp"
                            android:textColor="#ffffff" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/btn_arrow_n"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:background="#1E0B0011"
                        android:layout_below="@+id/News"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/Notices"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notice"
                            android:id="@+id/NoticesTitle"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#1e0b00"
                            android:textSize="18dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="We are testing this session."
                            android:id="@+id/NoticesContents1"
                            android:layout_below="@+id/NoticesTitle"
                            android:textSize="15dp"
                            android:textColor="#1e0b00" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:id="@+id/NoticesContents2"
                            android:layout_below="@+id/NoticesContents1"
                            android:textSize="15dp"
                            android:textColor="#ffffff" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/btn_arrow_n"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/banner_ad_unit_id"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentBottom="true">
                    </com.google.android.gms.ads.AdView>

                </RelativeLayout>><!-- bottom_new_tabs-->



            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>


